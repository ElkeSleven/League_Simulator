<Window x:Class="LeagueSimulator2._0.OverzichtMatches"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LeagueSimulator2._0"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="OverzichtMatches" Height="450" Width="800">
    <Grid Background="#01434f">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            <DataGrid 
                        Name="DataGridMatches"
                        Margin="20"
                        Grid.RowSpan="2">

            </DataGrid>
        <Button Grid.Column="1" Margin="20" Click="ExportToXMLButton_Click">Export to XML</Button>
    </Grid>
   
</Window>
